<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bg_gray"
              android:layout_width="match_parent"
              style="@style/common_pad_m"
              android:layout_height="match_parent">


    <LinearLayout
        style="@style/common_pad_white_b"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            style="@style/subTitle_b_font"
            android:text="@string/account_beans_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/account_cur_beans_tv"
            android:layout_width="wrap_content"
            style="@style/subTitle_blue_font"
            android:text="153"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/account_deposit_btn"
            style="@style/whit_title_font"
            android:text="@string/account_deposit"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/blue_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ListView
        android:id="@+id/account_list"
        android:layout_marginTop="@dimen/common_pad_b"
        android:divider="@android:color/transparent"
        android:dividerHeight="1px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
