<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/content_layout"
                tools:context=".MainActivity">

    <com.promote.jchlib.util.view.PagerSlidingTabStrip
        android:id="@+id/home_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        app:curTabtextColor="@color/title_green"
        app:curTabtextSize="@dimen/subtitle_font"
        android:background="@android:color/white"
        app:indicatorColor="@color/title_green"
        app:indicatorHeight="2dp"
        app:tabtextAllCaps="false"
        app:tabtextColor="@color/tab_gray"
        app:tabtextSize="@dimen/subtitle_font"
        app:underlineColor="@android:color/white"
        app:underlineHeight="1dp"></com.promote.jchlib.util.view.PagerSlidingTabStrip>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/home_tab"
        android:id="@+id/home_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>
