<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:padding="@dimen/common_pad_m"
              android:background="@drawable/whit_item_bg_sel"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/msg_list_item_img"
        android:layout_width="@dimen/common_item_img_size"
        android:src="@mipmap/msg_list_def_icon"
        android:layout_height="@dimen/common_item_img_size"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/common_pad_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_item_title_tv"
                android:layout_weight="1"
                style="@style/subTitle_b_font"
                android:singleLine="true"
                android:text="fdsafdsfa"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/list_item_time_tv"
                style="@style/nomal_grag_font"
                android:text="2531"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/list_item_content_tv"
            style="@style/nomal_b_font"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="fdsfasdfdsfdsafsdfds"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>