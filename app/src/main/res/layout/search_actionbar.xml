<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/title_blue"
    android:layout_height="@dimen/action_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/title_blue"
        android:layout_height="@dimen/action_height">

        <ImageButton
            android:id="@+id/action_back_ib"
            android:layout_width="@dimen/action_height"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/back_sel"
            />

        <ImageButton
            android:id="@+id/action_search_ib"
            android:layout_width="@dimen/action_height"
            android:src="@android:drawable/ic_menu_search"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/search_et"
            android:layout_margin="@dimen/action_pad"
            android:layout_toRightOf="@id/action_back_ib"
            android:layout_toLeftOf="@id/action_search_ib"
            android:background="@drawable/search_et_bg"
            android:singleLine="true"
            android:ellipsize="end"
            android:hint="@string/search_hint"
            android:textColorHint="@color/tab_gray"
            style="@style/subTitle_b_font"
            android:paddingRight="@dimen/action_search_pad_l_r"
            android:paddingLeft="@dimen/action_search_pad_l_r"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</FrameLayout>